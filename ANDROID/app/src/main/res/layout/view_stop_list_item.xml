<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="13dp"
>
    <TextView
        android:id="@+id/stop_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:ellipsize="end"
        android:text="Stop Name"
        android:textColor="@android:color/black"
    />

    <LinearLayout
        android:id="@+id/stop_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >
        <LinearLayout
            android:id="@+id/container_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            android:gravity="center_vertical"
        >
            <ImageView
                android:id="@+id/img1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_stop"
                android:visibility="gone"
            />
            <TextView
                android:id="@+id/direction1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:visibility="gone"
            />
            <TextView
                android:id="@+id/track_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/container_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
        >
            <ImageView
                android:id="@+id/img2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_stop"
                android:visibility="gone"
            />

            <TextView
                android:id="@+id/direction2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:visibility="gone"
            />
            <TextView
                android:id="@+id/track_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
        >
            <ImageView
                android:id="@+id/img3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_stop"
                android:visibility="gone"
            />
            <TextView
                android:id="@+id/direction3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/track_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="No Buses In Service To This Stop"
        android:visibility="gone"
    />


    <LinearLayout
        android:id="@+id/route_stops_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
    >
        <TextView
            android:id = "@+id/text_stop_routes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="10sp"
            android:text="This stop is on the following routes"
        />
        <com.etatransit.view.RouteCircleView
            android:id="@+id/route_circles"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
        />
    </LinearLayout>
</LinearLayout>