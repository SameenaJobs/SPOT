<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">



        <TextView
            android:id="@+id/alertName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/edit"
            android:padding="2dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeats :"
            android:visibility="gone"
            android:layout_marginLeft="12dp"
            android:padding="1dp"
            android:layout_below="@+id/alertName"
            android:id="@+id/repeatText"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/repeat"
            android:visibility="gone"
            android:layout_below="@+id/alertName"
            android:layout_alignBaseline="@+id/repeatText"
            android:layout_toRightOf="@+id/repeatText"
            android:layout_toEndOf="@+id/repeatText" />


        <ImageView
            android:id="@+id/expired"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/expired"
            android:visibility="gone"/>




        <TextView
            android:id="@+id/alertId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/black"
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit"
            android:padding="5dp"
            android:src="@drawable/edit"
            android:layout_alignBottom="@+id/delete"
            android:layout_toLeftOf="@+id/delete"
            android:layout_toStartOf="@+id/delete" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:layout_weight="1"
            android:padding="6dp"
            android:layout_gravity="right"
            android:src="@drawable/delete"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>






</RelativeLayout>