<resources>

    <style name="ETA.Splash" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="ETA.Theme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ETA.ActionBar</item>
        <item name="android:listViewStyle">@style/ETA.ListView</item>
    </style>

    <style name="ETA.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:icon">@drawable/ic_menu_logo</item>
        <item name="android:displayOptions">showHome|useLogo|showTitle</item>
        <item name="android:background">@color/eta_actionbar_background</item>
    </style>


    <style name="ETA.ListView" parent="android:Widget.Holo.ListView">
        <item name="android:background">@android:color/white</item>
    </style>


    <style name="ETA.AgencySelector.Title" parent="android:TextAppearance.Medium">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:padding">@dimen/padding_eta_agency_selector_title</item>
        <item name="android:textSize">@dimen/text_size_eta_agency_selector_title</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ETA.AgencySelector.Header" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_eta_agency_selector_header</item>
    </style>

    <style name="ETA.AgencySelector.Arrow" parent="android:Widget">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:rotation">180</item>
        <item name="android:background">@drawable/agency_selector_header_arrow</item>
    </style>


    <style name="ETA.SubNavigation.Button" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="HyperLink">
        <item name="android:textColor">#3498db</item>
        <item name="android:background">@drawable/hyperlink_underline</item>
    </style>

    <style name="txt_help">txt</style>
</resources>
